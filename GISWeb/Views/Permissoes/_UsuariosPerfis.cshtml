@model List<UsuarioPerfilViewModel>
@using GISModel.Entidades
@using GISModel.DTO.Permissoes

@{

    if (Model.Count > 0)
    {

        <div class="row">
            <div class="col-xs-12">

                <div class="clearfix">
                    <div class="pull-right tableTools-container"></div>
                </div>
                
                <div>
                    <table id="dynamic-table1" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Login</th>
                                @{
                                    int idx = -1;
                                    foreach (Perfil iPerfil in ViewBag.Perfis) {
                                        idx += 1;
                                        <th class="center">
                                            @iPerfil.Nome <br />&nbsp;
                                            <label class="pos-rel">
                                                <input type="checkbox" id="@iPerfil.IDPerfil" rel="@idx" class="ace" />
                                                <span class="lbl"></span>
                                            </label>
                                        </th>
                                    }
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (UsuarioPerfilViewModel item in Model)
                            {
                                <tr>
                                    <td>@item.Nome</td>
                                    <td>@item.Login</td>

                                    @foreach (Perfil iPerfil in ViewBag.Perfis) { 
                                        <td class="center">
                                            <label class="pos-rel">
                                                
                                                @{
                                                    string PossuiPerfil = string.Empty;
                                                    if (item.Perfis.FirstOrDefault(p => p.IDPerfil.Equals(iPerfil.IDPerfil)) != null) {
                                                        PossuiPerfil = " checked=\"checked\" ";
                                                    }
                                                }

                                                <input type="checkbox" onclick="SalvarPermissoes(this.checked, '@iPerfil.IDPerfil', '@item.IDUsuario');" id="@item.IDUsuario|" @PossuiPerfil class="ace" />
                                                <span class="lbl"></span>
                                            </label>
                                        </td>
                                    }

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    }
    else { 
        <div class="alert alert-warning">
            <strong>
                <i class="ace-icon fa fa-meh-o"></i>
                Oops!
            </strong>

                Nenhuma permissão encontrada para o filtro.
            <br>
        </div>
    }

}
