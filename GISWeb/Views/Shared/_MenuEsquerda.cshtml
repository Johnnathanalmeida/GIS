            <li id="menuLateralPesquisaRapida">
                <a href="@Url.Action("Rapida", "Query")">
                    <i class="menu-icon fa fa-bolt"></i>
                    Rápida
                </a>
                <b class="arrow"></b>
            </li>
            <li id="menuLateralPesquisaAvancada">
                <a href="#" class="dropdown-toggle">
                    <i class="menu-icon fa fa-caret-right"></i>
                    Avançada
                    <b class="arrow fa fa-angle-down"></b>
                </a>
                <b class="arrow"></b>
                <ul class="submenu">

                    <li id="liTeste">
                        <a href="#">
                            Usuário
                        </a>
                        <b class="arrow"></b>
                    </li>
                    
                </ul>
