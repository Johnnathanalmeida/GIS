    Quatro botões no menu lateral à esquerda.*@
<div class="sidebar-shortcuts" id="sidebar-shortcuts">
    <div class="sidebar-shortcuts-large" id="sidebar-shortcuts-large">
        <button class="CustomTooltip btn btn-danger btnModuloEstatistico" title="Módulo Estatístico" data-link-estatistico="@System.Configuration.ConfigurationManager.AppSettings["Web:ModuloEstatistico"]">
            <i class="ace-icon fa fa-bar-chart bigger-115"></i>
        </button>
        <button class="CustomTooltip btn btn-grey" @*data-url="@Url.Action("ACTION", "CONTROLLER")"*@>
            <i class="ace-icon fa fa-ban bigger-115"></i>
        </button>
        <button class="CustomTooltip btn btn-grey">
            <i class="ace-icon fa fa-ban bigger-115"></i>
        </button>
        <button class="CustomTooltip btn btn-grey">
            <i class="ace-icon fa fa-ban bigger-115"></i>
        </button>
    </div>

    <div class="sidebar-shortcuts-mini" id="sidebar-shortcuts-mini">
        <span class="btn btn-success"></span>
        <span class="btn btn-info"></span>
        <span class="btn btn-warning"></span>
        <span class="btn btn-danger"></span>
    </div>
</div>

<ul id="ulMenuLateral" class="nav nav-list" data-menuativo="@ViewBag.MenuAtivo">
    <li id="menuLateralPortal">
        <a href="#" class="EmConstrucao">
            <i class="menu-icon fa fa-home"></i>
            <span class="menu-text" style="font-weight: bold;">
