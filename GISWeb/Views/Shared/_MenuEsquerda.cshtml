                    Administração
                </span>
                <b class="arrow"></b>
            </a>
        </li>
    @*}*@

    <li id="menuLateralMeusPedidos">
        <a href="#" class="dropdown-toggle">
            <i class="menu-icon fa fa-shopping-cart"></i>
            <span class="menu-text" style="font-weight: bold;">
                Meus Pedidos
            </span>
            <b class="arrow fa fa-angle-down"></b>
        </a>
        <b class="arrow"></b>
        <ul class="submenu">
            <li id="subMenuPedidosEmprestimo">
                <a href="@Url.Action("Index", "MeusPedidos", new { tipo = "emprestimo" })">
                    <i class="menu-icon fa fa-bolt"></i>
                    Pedidos de Empréstimo
                </a>
                <b class="arrow"></b>
            </li>
            <li id="subMenuPedidosCopia">
                <a href="@Url.Action("Index", "MeusPedidos", new { tipo = "copia" })">
                    <i class="menu-icon fa fa-bolt"></i>
