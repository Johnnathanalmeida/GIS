@model List<GISModel.Entidades.Empregado>
@using GISModel.Entidades

@if (Model.Count > 0)
{
    <div class="row">
        <div class="col-xs-12">
            <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Data de Cadastro</th>
                        <th>Nascimento</th>
                        <th>Telefone</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Empregado iEmpregado in Model)
                    {
                        <tr id="linha-@iEmpregado.IDEmpregado">
                            <td>
                                <a href="#" class="CustomTooltip" title="Exibir perfil">
                                    @iEmpregado.Nome
                                </a>
                            </td>
                            <td>@iEmpregado.DataInclusao</td>
                            <td>@iEmpregado.DataNascimento</td>
                            <td>@iEmpregado.Telefone</td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-xs-12">
            <p>Nenhum empregado encontrado</p>
        </div>
    </div>
}

