@using GISModel.Entidades

@{
    ViewBag.Title = "Listagem de Contratos";
}

<div class="row">
    <div class="col-xs-12">
        <h3 class="header smaller lighter blue">
            Gerenciamento de Contratos
            <a href="@Url.Action("Novo", "Contrato")" class="btn btn-white btn-info btn-bold" style="float: right; margin-top: -2px;">
                <i class="ace-icon fa fa-plus bigger-120 blue"></i>
                Novo Contrato
            </a>
        </h3>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">

        @{
            Html.RenderPartial("_MensagensDeRetorno");
        }

        @if (ViewBag.Contratos != null && ViewBag.Contratos.Count > 0)
        {
            <div>
                <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Número</th>
                            <th>Fornecedor</th>
                            <th>Departamento(s)</th>
                            <th>Início</th>
                            <th>Fim</th>
                            <th width="89px"></th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (Contrato iContrato in ViewBag.Contratos)
                        {
                            <tr id="linha-@iContrato.IDContrato">
                                <td>@iContrato.Numero</td>
                                <td>@iContrato.Fornecedor.Nome</td>
                                <td>
                                    @{
                                        string Deps = string.Empty;
                                        foreach (Departamento iDep in iContrato.Departamentos)
                                        {
                                            if (!string.IsNullOrEmpty(Deps))
                                            {
                                                Deps += ", ";
                                            }

                                            Deps += iDep.Sigla;
                                        }    
                                    }
                                    <span>@Deps</span>
                                </td>
                                <td>@iContrato.Inicio</td>
                                <td>@iContrato.Fim</td>
                                
                                <td>
                                    <div class="hidden-sm hidden-xs action-buttons">
                                        <a class="blue" href="#" onclick="BuscarDetalhesEmpresa('@iContrato.IDContrato'); return false;">
                                            <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                        </a>

                                        <a href='@Url.Action("Edicao", "Contrato", new { id = @iContrato.IDContrato })' class="green">
                                            <i class="ace-icon fa fa-pencil bigger-130"></i>
                                        </a>

                                        <a class="red" href="#" onclick="DeletarContrato('@iContrato.IDContrato', '@iContrato.Numero');">
                                            <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                        </a>
                                    </div>

                                    <div class="hidden-md hidden-lg">
                                        <div class="inline pos-rel">
                                            <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                                <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                                            </button>

                                            <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                                <li>
                                                    <a href="#" class="tooltip-info" onclick="BuscarDetalhesEmpresa('@iContrato.IDContrato'); return false;" data-rel="tooltip" title="View">
                                                        <span class="blue">
                                                            <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                                        </span>
                                                    </a>
                                                </li>

                                                <li>
                                                    <a href='@Url.Action("Edicao", "Contrato", new { id = @iContrato.IDContrato })' class="tooltip-success" data-rel="tooltip" title="Edit">
                                                        <span class="green">
                                                            <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                                        </span>
                                                    </a>
                                                </li>

                                                <li>
                                                    <a href="#" class="tooltip-error" onclick="DeletarContrato('@iContrato.IDContrato', '@iContrato.Numero');" data-rel="tooltip" title="Delete">
                                                        <span class="red">
                                                            <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                        </span>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        }
        else
        { 
            <div class="alert alert-warning">
                <strong>
                    <i class="ace-icon fa fa-meh-o"></i>
                    Oops!
                </strong>

                    No momento, não existe contrato cadastrado no sistema.
                <br>
            </div>
        }

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jQ_dataTable")
    <script src="~/Scripts/Custom/Contrato/Listagem.js"></script>
}
